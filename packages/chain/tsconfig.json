{
    "compilerOptions": {
      "module": "ES2022",
      "target": "ES2022",
      "outDir": "./exports",
      "moduleResolution":"nodenext",
      "declaration": true,
      "emitDeclarationOnly": true,
      "declarationDir": "./exports/typings",
      "allowSyntheticDefaultImports": true,    
      "resolveJsonModule": true,
      "allowJs": true,
      "useDefineForClassFields": false,
      "types": [
        "node"
      ]
    },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}